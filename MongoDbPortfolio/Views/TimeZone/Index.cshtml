@model List<MongoDbPortfolio.DAL.Entities.TimeZone>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminUILayout/Index.cshtml";
}

<br />
<br />
<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Yıl</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var item in Model)
        {

            <tr>
                <td>@item.TimeZoneId</td>
                <td>@item.Year</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td><a href="/TimeZone/DeleteTimeZone/@item.TimeZoneId" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/TimeZone/UpdateTimeZone/@item.TimeZoneId" class="btn btn-outline-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/TimeZone/CreateTimeZone" class="btn btn-primary">Yeni Bilgi Girişi</a>
</div>



